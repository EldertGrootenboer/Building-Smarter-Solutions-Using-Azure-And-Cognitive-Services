{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "full": {
            "type": "object"
        }
    },
    "variables": {
        "luisApiName": "[concat(parameters('full').cognitiveServices.luis.name, uniqueString(resourceGroup().name))]"
    },
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[variables('luisApiName')]",
            "location": "[parameters('full').general.location]",
            "tags": "[parameters('full').general.tags]",
            "sku": {
                "name": "[parameters('full').cognitiveServices.luis.sku]"
            },
            "kind": "LUIS",
            "properties": {
                "publicNetworkAccess": "Enabled"
            }
        }
    ]
}