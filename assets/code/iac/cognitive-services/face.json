{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "full": {
            "type": "object"
        }
    },
    "variables": {
        "keyVaultName": "[concat(parameters('full').keyVault.name, uniqueString(resourceGroup().name))]"
    },
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[parameters('full').cognitiveServices.face.name]",
            "location": "[parameters('full').general.location]",
            "tags": "[parameters('full').general.tags]",
            "sku": {
                "name": "[parameters('full').cognitiveServices.face.sku]"
            },
            "kind": "Face",
            "properties": {
                "customSubDomainName": "[parameters('full').cognitiveServices.face.name]",
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(variables('keyVaultName'), '/', parameters('full').keyVault.secrets.faceApiSubscriptionKey)]",
            "properties": {
                "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts',parameters('full').cognitiveServices.face.name),'2017-04-18').key1]",
                "attributes": {
                    "enabled": true
                }
            }
        }
    ]
}