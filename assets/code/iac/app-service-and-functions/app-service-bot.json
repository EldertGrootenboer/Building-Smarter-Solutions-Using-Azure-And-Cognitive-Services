{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "full": {
            "type": "object"
        }
    },
    "variables": {
        "keyVaultName": "[concat(parameters('full').keyVault.name, uniqueString(resourceGroup().name))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[parameters('full').appServices.bot.appServicePlan]",
            "location": "[parameters('full').general.location]",
            "tags": "[parameters('full').general.tags]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "properties": {
                "name": "[parameters('full').appServices.bot.appServicePlan]"
            }
        },
        {
            "name": "botAppService",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('full').appServices.bot.appServicePlan)]"
            ],
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "full": {
                        "value": "[parameters('full')]"
                    },
                    "servicePrincipalClientId": {
                        "reference": {
                            "keyVault": {
                                "id": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
                            },
                            "secretName": "[parameters('full').keyVault.secrets.servicePrincipalClientId]"
                        }
                    },
                    "servicePrincipalPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
                            },
                            "secretName": "[parameters('full').keyVault.secrets.servicePrincipalPassword]"
                        }
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "full": {
                            "type": "object"
                        },
                        "servicePrincipalClientId": {
                            "type": "securestring"
                        },
                        "servicePrincipalPassword": {
                            "type": "securestring"
                        }
                    },
                    "variables": {
                        "apiManagementName": "[concat(parameters('full').apiManagement.name, uniqueString(resourceGroup().name))]",
                        "storageAccountName": "[concat(parameters('full').storageAccount.name, uniqueString(resourceGroup().name))]",
                        "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Web/sites",
                            "apiVersion": "2018-11-01",
                            "name": "[parameters('full').appServices.bot.name]",
                            "location": "[parameters('full').general.location]",
                            "tags": "[parameters('full').general.tags]",
                            "kind": "app",
                            "properties": {
                                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('full').appServices.bot.appServicePlan)]",
                                "siteConfig": {
                                    "appSettings": [
                                        {
                                            "name": "MicrosoftAppId",
                                            "value": "[parameters('servicePrincipalClientId')]"
                                        },
                                        {
                                            "name": "MicrosoftAppPassword",
                                            "value": "[parameters('servicePrincipalPassword')]"
                                        },
                                        {
                                            "name": "LuisAppId",
                                            "value": "[parameters('full').cognitiveServices.luis.appId]"
                                        },
                                        {
                                            "name": "LuisAPIKey",
                                            "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', parameters('full').cognitiveServices.luis.name),'2017-04-18').key1]"
                                        },
                                        {
                                            "name": "LuisAPIHostName",
                                            "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('full').cognitiveServices.luis.name), '2017-04-18').endpoint]"
                                        },
                                        {
                                            "name": "ApiManagementEndpoint",
                                            "value": "[reference(resourceId('Microsoft.ApiManagement/service', variables('apiManagementName')), '2019-12-01').gatewayUrl]"
                                        },
                                        {
                                            "name": "ApiManagementCreateVisitorPath",
                                            "value": "[concat('/', parameters('full').apiManagement.apis.visitors.name, parameters('full').apiManagement.apis.visitors.operations.create.urlTemplate)]"
                                        },
                                        {
                                            "name": "BlobConnectionString",
                                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1, ';EndpointSuffix=core.windows.net')]"
                                        },
                                        {
                                            "name": "BlobContainerVisitorPictures",
                                            "value": "[parameters('full').storageAccount.containers.visitorPictures]"
                                        },
                                        {
                                            "name": "ApiManagementSubscriptionKey",
                                            "value": "[listSecrets(resourceId('Microsoft.ApiManagement/service/subscriptions', variables('apiManagementName'), parameters('full').apiManagement.subscriptions.azurePlatform), '2019-12-01').primaryKey]"
                                        },
                                        {
                                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                                            "value": "10.14.1"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}