{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorObjectId": {
            "type": "string"
        },
        "rdwApiSubscriptionKey": {
            "type": "securestring"
        },
        "servicePrincipalPasswordEventGridValue": {
            "type": "securestring"
        },
        "keyVaultName": {
            "type": "string",
            "defaultValue": "kv-cognitive-services"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "tags": {
            "type": "object",
            "defaultValue": {
                "CreationDate": "06-08-2020",
                "Project": "Building Smarter Solutions Using Azure and Cognitive Services",
                "Purpose": "Session"
            }
        },
        "rdwApiSubscriptionKeySecretName": {
            "type": "string",
            "defaultValue": "rdwApiSubscriptionKey"
        },
        "servicePrincipalPasswordEventGridSecretName": {
            "type": "string",
            "defaultValue": "servicePrincipalPasswordEventGrid"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                    {
                        "tenantId": "[subscription().tenantId]",
                        "objectId": "[parameters('administratorObjectId')]",
                        "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore",
                                "ManageContacts",
                                "ManageIssuers",
                                "GetIssuers",
                                "ListIssuers",
                                "SetIssuers",
                                "DeleteIssuers"
                            ]
                        }
                    }
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVaultName'), '/', parameters('rdwApiSubscriptionKeySecretName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            ],
            "properties": {
                "value": "[parameters('rdwApiSubscriptionKey')]",
                "attributes": {
                    "enabled": true
                }
            }
        },
        {
            "condition": "[not(empty(parameters('servicePrincipalPasswordEventGridValue')))]",
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVaultName'), '/', parameters('servicePrincipalPasswordEventGridSecretName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            ],
            "properties": {
                "value": "[parameters('servicePrincipalPasswordEventGridValue')]",
                "attributes": {
                    "enabled": true
                }
            }
        }
    ]
}