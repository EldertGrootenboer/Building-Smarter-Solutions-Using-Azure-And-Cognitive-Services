<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="using:IntelligentKioskSample.Controls.Overlays.Primitives">
    <Style TargetType="p:OverlayLabel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="p:OverlayLabel">

                    <Canvas>
                        <ContentPresenter Name="PART_MainPresenter" ContentTemplate="{Binding LabelTemplate, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Canvas>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
